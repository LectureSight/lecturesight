<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="lecturesight.framesource.manager"
               immediate="true">
  <implementation class="cv.lecturesight.framesource.impl.FrameSourceManagerImpl"/>
  <property name="service.description" value="FrameSourceManager Implementation"/>
  <service>
    <provide interface="cv.lecturesight.framesource.FrameSourceManager"/>
    <provide interface="org.osgi.service.event.EventHandler"/>
  </service>

  <property name="event.topics">
      org/osgi/framework/ServiceEvent/REGISTERED
      org/osgi/framework/ServiceEvent/UNREGISTERING
  </property>
  <reference name="config"
             interface="cv.lecturesight.util.conf.Configuration"
             cardinality="1..1"
             policy="static"
             bind="setConfig"/>

  <reference name="ocl"
             interface="cv.lecturesight.opencl.OpenCLService"
             cardinality="1..1"
             policy="static"
             bind="setOcl"/>

  <reference name="dsps"
             interface="cv.lecturesight.display.DisplayService"
             cardinality="1..1"
             policy="static"
             bind="setDsps"/>

  <reference name="spm"
             interface="cv.lecturesight.profile.api.SceneProfileManager"
             cardinality="1..1"
             policy="static"
             bind="setSpm"/>


</scr:component>
